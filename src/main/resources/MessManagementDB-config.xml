<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
        <typeAlias type=" com.example.messmanagement.model.MessEntity" alias="MessEntity" />
        <typeAlias type="com.example.messmanagement.model.HostelEntity" alias="HostelEntity" />
        <typeAlias type="com.example.messmanagement.model.MessOwnerEntity" alias="MessOwnerEntity" />
    </typeAliases>

    <environments default = "development">
        <environment id = "development">
            <transactionManager type = "JDBC"/>

            <dataSource type = "POOLED">
                <property name = "driver" value = "org.postgresql.Driver"/>
                <property name = "url" value = "jdbc:postgresql://localhost:5432/MyBatisDemo"/>
                <property name = "username" value = "postgres"/>
                <property name = "password" value = "postgres"/>
            </dataSource>

        </environment>
    </environments>
    <mappers>
        <mapper resource = "mess-management/mapper/MessMapper.xml" />
        <mapper resource="mess-management/mapper/HostelMapper.xml" />
        <mapper resource="mess-management/mapper/MessOwnerMapper.xml" />
    </mappers>

</configuration>