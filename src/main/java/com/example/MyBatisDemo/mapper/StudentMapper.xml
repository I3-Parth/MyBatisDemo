<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.MyBatisDemo.repository.StudentRepository">
    <resultMap id="StudentResultMap" type="com.example.MyBatisDemo.model.StudentEntity">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="age" column="age" />
        <result property="email" column="email" />
        <result property="city" column="city" />
        <collection property="subjects" ofType="com.example.MyBatisDemo.model.SubjectEntity" column="id" select="selectSubjectsForStudent" javaType="ArrayList" />
    </resultMap>

    <resultMap id="SubjectResultMap1" type="com.example.MyBatisDemo.model.SubjectEntity">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="credits" column="credits" />
    </resultMap>

    <select id="findAllStudents" resultMap="StudentResultMap" >
        select * from student
    </select>

    <select id="findStudentById" resultMap="StudentResultMap" parameterMap="java.lang.Long">
        select * from student where id = #{id}
    </select>

    <select id="selectSubjectsForStudent" parameterType="java.lang.Long" resultType="com.example.MyBatisDemo.model.SubjectEntity" resultMap="SubjectResultMap1">
        select id, name, credits from subject where id = #{id}
    </select>
</mapper>